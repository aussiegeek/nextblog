{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "ci": "yarn prettier:check && yarn lint:markdown && yarn tsc --noEmit && yarn build",
    "dev": "next dev",
    "lint:markdown": "markdownlint '**/*.mdx'",
    "prettier:check": "prettier -c .",
    "prettier:fix": "prettier --write .",
    "start": "next start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn ci"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,md,mdx,json}": "prettier --write",
    "package.json": "sort-package-json",
    "*.{md,mdx}": "markdownlint --fix"
  },
  "dependencies": {
    "@panelbear/panelbear-js": "^1.2.0",
    "@tailwindcss/typography": "0.4.0",
    "autoprefixer": "10.2.4",
    "convertkit-react": "1.5.0",
    "gray-matter": "4.0.2",
    "next": "10.0.5",
    "next-mdx-remote": "2.1.3",
    "postcss": "8.2.6",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "tailwindcss": "2.0.3"
  },
  "devDependencies": {
    "@types/node": "14.14.41",
    "@types/react": "17.0.3",
    "@types/webpack-env": "1.16.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "markdownlint-cli": "0.27.1",
    "prettier": "2.2.1",
    "sort-package-json": "1.49.0",
    "typescript": "4.1.5"
  }
}
