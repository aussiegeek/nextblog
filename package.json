    "gray-matter": "4.0.2",
    "next": "10.0.5",
    "postcss": "8.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "tailwindcss": "2.0.2"
  },
  "devDependencies": {
    "@types/node": "14.14.25",
    "@types/react": "17.0.1",
    "@types/webpack-env": "1.16.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "markdownlint-cli": "0.26.0",
